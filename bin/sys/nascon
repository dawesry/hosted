#!/usr/bin/zsh

sudo mount 192.168.0.112:/volume1/Media/ /mnt/Media/

echo "NFS mounted"

print_usage() {
  echo "Usage: -d        restart docker"
}

restart_docker() {
  sudo service docker restart
  echo "Docker restarted"
}

while getopts 'd' flag; do
  case "${flag}" in
    d) restart_docker
       echo "All done!"
       exit 0 ;;
    *) print_usage
       exit 1 ;;
  esac
done

exit 0
