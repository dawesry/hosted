#!/usr/bin/zsh

sudo mount 192.168.1.25:/volume1/Media/ /mnt/Media/

print_usage() {
  echo "Usage: ..."
}

restart_docker() {
  sudo service docker restart
  echo "docker restarted :)"
}


while getopts 'd' flag; do
  case "${flag}" in
    d) restart_docker
       exit 0;;
    *) print_usage
       exit 1 ;;
  esac
done

exit 0
