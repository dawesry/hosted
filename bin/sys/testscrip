#!/usr/bin/zsh

echo "MOUNT COMMAND RUNNING"

sleep 3

print_usage() {
  echo "Usage: ..."
}

restart_docker() {
  echo "DOCKER RESTART COMMAND"
  sleep 3
  echo "docker restarted :)"
}


while getopts 'd' flag; do
  case "${flag}" in
    d) restart_docker
       exit 0;;
    *) print_usage
       exit 1 ;;
  esac
done

exit 0
