#!/usr/bin/zsh

update_one () {
  docker ps --format "{{.Names}}"

  echo "Which container do you want to update?"

  read containername

  docker-compose pull $containername 

  echo "New image pulled."

  docker-compose up --force-recreate --build -d $containername
  
  echo "New container up and running."
  
  docker image prune -f
  
  echo "Old image pruned."
}

update_all() {
  echo "Do you want to update all? (y/n)"
  
  read yesno
  
  if [$yesno == ^(y)S]; then
   
    docker-compose pull

    echo "New images pulled."

    docker-compose up --force-recreate --build -d

    echo "New containers up and running."

    docker image prune -f

    echo "Old images pruned."
    
    exit 1
  fi
  
  if [$yesno == ^(n)S]; then
  
    echo "Ok. Goodbye!"
    
    exit 1
  fi
  
  if [$yesno != ^(y|n)$]; then 
    echo "Must be y/n"
  fi

}

help_text() {
  echo "script usage: upcons [-a] [-s]"
}

if [ $# -lt 1 ]; then
    echo "Not enough arguments."
    help_text
    exit 1
fi

if [ $# -gt 1 ]; then
    echo "Too many arguments."
    help_text
    exit 1
fi

while getopts 'as' OPTION; do
  case "$OPTION" in
    a)
      update_all
      exit 1
      ;;
    s)
      update_one
      exit 1
      ;;
    *)
      help_text
      exit 1
      ;;
  esac
done
shift "$(($OPTIND -1))"

exit 0
